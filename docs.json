{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "V4Pay",
  "logo": {
    "light": "/logo/red.svg",
    "dark": "/logo/red.svg"
  },
  "favicon": "/favicon.ico",
  "colors": {
    "primary": "#e50914",
    "light": "#F87171",
    "dark": "#B91C1C"
  },
  "api": {
    "mdx": {
      "server": "https://api.v4pay.com/v1",
      "auth": {
        "method": "bearer"
      }
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentação",
        "groups": [
          {
            "group": "Introdução",
            "pages": [
              "pages/introduction",
              "pages/devmode",
              "pages/authentication",
              "pages/webhook",
              "pages/production",
              "pages/sdks"
            ]
          },
          {
            "group": "Cliente",
            "pages": ["pages/costumers/reference", "pages/costumers/create", "pages/costumers/list"]
          },
          {
            "group": "Cobrança",
            "pages": ["pages/charges/reference", "pages/charges/create", "pages/charges/list"]
          },
          {
            "group": "Pix QRCode",
            "pages": [
              "pages/pix/reference",
              "pages/pix/create",
              "pages/pix/simulate-payment",
              "pages/pix/check/"
            ]
          },
          {
            "group": "Cupom",
            "pages": ["pages/coupons/reference", "pages/coupons/create", "pages/coupons/list"]
          }
        ]
      },
      {
        "tab": "Referência da API",
        "openapi": "openapi.yaml"
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Repositório",
        "href": "https://github.com/v4pay/documentation"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://www.v4pay.com/app"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/v4pay",
      "github": "https://github.com/v4pay",
      "linkedin": "https://br.linkedin.com/company/v4pay"
    }
  }
}